<div class="container">
    <div class="jumbotron">
      <h1 class="display-3">Multer Tutorial</h1>
      <p class="lead">Upload files using Multer, Express.js and Mongodb</p>
    </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col col-md-6">
      <form method="post" enctype="multipart/form-data" action="/api">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="title">Description</label>
          <input type="text" class="form-control" name="description" placeholder="Enter description">
        </div>
        <div class="form-group">
          <label for="photo">Photo</label>
          <input type="file" class="form-control-file" name="photo">
        </div>
        <button type="submit" class="btn btn-outline-info">Submit</button>
      </form>
    </div>
  </div>
</div>

<div class="container main-cont">
  <div class="row">
    {{#if profile}}
      {{#each profile}}
        <div class="col-md-4">
          <div class="card">
            <img class="card-img-top custom-img" src="/uploads/{{photo}}" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title">{{title}}</h4>
              <p class="card-text">{{description}}</p>
              <form action="/api/{{this.id }}?_method=DELETE" method="POST" class="del-but">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
              </form>
              <a href="/{{this.id }}"><button class="btn btn-outline-info">Edit</button></a>
            </div>
          </div>
          <div class="sep"></div>
        </div>

      {{/each}}
      {{else}}
       <h3>You have no profiles</h3>
      {{/if}}
  </div>
</div>
